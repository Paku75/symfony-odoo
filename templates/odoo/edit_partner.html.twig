{% extends 'base.html.twig' %}

{% block title %}Edit Partner{% endblock %}

{% block body %}
<h1>Edit Partner</h1>

{# Create a form for editing a partner #}
<form action="{{ path('odoo_partner_update', { id: partner.id }) }}" method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{ partner.name }}" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{ partner.email }}" required>
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" value="{{ partner.phone }}" required>
    </div>
    <button type="submit">Update Partner</button>
</form>

{# Link to go back to the partner list #}
<a href="{{ path('odoo_partners') }}">Back to Partner List</a>
{% endblock %}
